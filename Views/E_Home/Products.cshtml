@model List<Final_Project.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/ForEmployee/_LayoutPageManageProduct.cshtml";
}

<h2>Products</h2>


<h2>Product List</h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>ProductName</th>
            <th>PricePerUnit</th>
            <th>ExpiryDate</th>
            <th>UnitSold</th>
        </tr>
    </thead>
    <tbody>
        @{ int index = 1; }
        @foreach (var p in Model)
        {
            <tr>
                <td>@index</td>
                <td>@p.ProductId</td>
                <td>@p.ProductName</td>
                <td>@p.PricePerUnit</td>
                <td>@p.ExpiryDate</td>
                <td>@p.UnitSold</td>
            </tr>
            { index++; }
        }


    </tbody>
</table>