@model List<Final_Project.Models.cart>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/ForEmployee/_LayoutPageManageCart.cshtml";
}

<h2>Cart</h2>


<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>ProductName</th>
            <th>PricePerUnit</th>
            <th>ExpiryDate</th>
            <th>UnitSold</th>
        </tr>
    </thead>
    <tbody>
        @{ int index = 1; }
        @foreach (var p in Model)
        {
            <tr>
                <td>@index</td>
                <td>@p.CartId</td>
                <td>@p.CreateTime</td>
                <td>@p.ProductName</td>
                <td>@p.Counts</td>
                <td>@p.ProductId</td>
                <td>@p.CustomerId</td>
            </tr>
            { index++; }
        }


    </tbody>
</table>