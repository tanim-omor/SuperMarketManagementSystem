

@model List<Final_Project.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/ForEmployee/_LayoutPageManageCustomer.cshtml";
}

<h2>Customers</h2>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>No.</th>
            <th>CustomerId</th>
            <th>Customer Name</th>
            <th>CustomerAge</th>
            <th>Customer Email</th>
            <th>Customer Phone</th>
            <th>Issue Date</th>
            <th>Current Status</th>
        </tr>
    </thead>
    <tbody>
        @{ int index = 1; }
        @foreach (var p in Model)
        {
            <tr>
                <td>@index</td>
                <td>@p.CustomerId</td>
                <td>@p.CustomerName</td>
                <td>@p.CustomerAge</td>
                <td>@p.CustomerEmail</td>
                <td>@p.CustomerPhone</td>
                <td>@p.IssueDate</td>
                <td>@p.CustomerStatus</td>
            </tr>
            { index++; }
        }


    </tbody>
</table>
