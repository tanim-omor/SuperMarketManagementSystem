@model Final_Project.Models.cart


@{
    ViewBag.Title = "AddCart2";
    Layout = "~/Views/Shared/ForEmployee/_LayoutPageManageCart.cshtml";


    List<SelectListItem> pl = new List<SelectListItem>();
    if (ViewBag.prods != null)
    {
        int i = 1;
        foreach (var p in ViewBag.prods)
        {
            pl.Add(new SelectListItem() { Text = p.ProductName, Value = Convert.ToString(p.ProductName) });
            i++;
        }
    }
}



<form action="/Cart/AddCart2" method="post">
    <div class="form-group" style="margin-top:30px">
        <label for="">Customer Id</label>
        <input type="text" class="form-control" id="txtName" placeholder="Enter Customer's' Id" name="cusid">
        @Html.ValidationMessage("Input", "", new { @class = "text-danger" })
    </div>

    <button name="action" id="SetId" value="Set" class="btn btn-success">Set</button>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Customer Id</th>
            <th>Customer Age</th>
        </tr>
    </thead>
    <tbody>

        @if (ViewBag.Customer != null)
        {
            foreach (var p in ViewBag.Customer)
            {
                <tr>
                    <td>@p.CustomerName</td>
                    <td>@p.CustomerId</td>
                    <td>@p.CustomerAge</td>
                </tr>
            }
        }

    </tbody>
</table>


<form action="/Cart/AddCart2" method="post">

    <div class="form-group">
        <label for="">Create Time</label>
        <input type="text" class="form-control" id="txtName" placeholder="Enter Name" name="CreateTime">
        @Html.ValidationMessage("Input", "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="">Product Id</label>
        <input type="text" class="form-control" id="txtName" placeholder="Enter Name" name="ProductId">
        @Html.ValidationMessage("Input", "", new { @class = "text-danger" })
    </div>

    <div class="form-group" style="">
        <label for="">Product Name</label>
        <input type="text" class="form-control" id="hidden" name="ProductName" style="display:none">
        @Html.ValidationMessage("Input", "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        Product Name
        @Html.DropDownList("Products", pl, "select", new { @id = "myid", @class = "myclass" });
    </div>

    <div class="form-group">
        <label for="">Quantity</label>
        <input type="text" class="form-control" id="txtName" placeholder="Enter Name" name="Counts">
        @Html.ValidationMessage("Input", "", new { @class = "text-danger" })
    </div>

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <button name="action" id="AddId" value="Add" class="btn btn-success">Submit</button>
</form>






<script src="~/Scripts/AddCartScript.js" type="text/javascript"></script>



